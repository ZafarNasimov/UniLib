@page
@model Unilib.Pages.EditPages.EditStudentModel
@using Unilib.DatabaseUtil

<h1>Edit Student</h1>

<form method="post">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" name="Name" value="@Model.student.Name">
    </div>
    <div class="form-group">
        <label for="address">Address:</label>
        <textarea class="form-control" id="address" name="Address">@Model.student.Address</textarea>
    </div>
    <div class="form-group">
        <label for="email">Email:</label>
        <textarea class="form-control" id="email" name="Email">@Model.student.Email</textarea>
    </div>
    <button type="submit" class="btn btn-primary add-btn">Save</button>
    <a href="/MainPages/Student" class="btn btn-danger">Cancel</a>
</form>
