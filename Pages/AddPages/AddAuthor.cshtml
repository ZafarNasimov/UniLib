@page
@model Unilib.Pages.AddPages.AddAuthorModel
@using Unilib.DatabaseUtil

<h1>Add Author</h1>

<form method="post">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" name="Name">
    </div>
    <div class="form-group">
        <label for="biography">Biography:</label>
        <textarea class="form-control" id="biography" name="Biography"></textarea>
    </div>
    <button type="submit" class="btn btn-primary add-btn">Add</button>
    <a href="/MainPages/Author" class="btn btn-danger">Cancel</a>
</form>


