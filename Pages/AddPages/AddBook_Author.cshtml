@page
@model Unilib.Pages.AddPages.AddBook_AuthorModel
@using Unilib.DatabaseUtil

<h1>Add Book_Author</h1>

<form method="post">
    <div class="form-group">
        <label for="ISBN">ISBN:</label>
        <input type="text" class="form-control" id="ISBN" name="ISBN">
    </div>
    <div class="form-group">
        <label for="author_id">Author id:</label>
        <textarea class="form-control" id="author_id" name="Author_id"></textarea>
    </div>
    <button type="submit" class="btn btn-primary add-btn">Add</button>
    <a href="/MainPages/Book_Author" class="btn btn-danger">Cancel</a>
</form>
